<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/display_qr_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/figmaBlue">

    <ImageView
        android:id="@+id/qr_code_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="360dp"
        android:background="@drawable/rounded_corners"
        android:scaleType="centerCrop"
        android:layout_marginTop="120dp"
        android:padding="4dp"
        android:clipToOutline="true"/>


    <TextView
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:id="@+id/view_qr_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qr_display_event_name_text"
        android:text="Scan QR Code"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="530dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Event_QR_Code"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/white"
            app:cornerRadius="7dp"
            android:text="Event QR Code"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Poster_QR_Code"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/white"
            app:cornerRadius="7dp"
            android:text="Poster QR Code"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/QRexplained"
        android:fontFamily="@font/roboto"
        android:textSize="18dp"
        android:layout_marginTop="610dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description for Button Selected" />
</FrameLayout>
